{
  "expo": {
    "name": "SHIELD",
    "slug": "shield-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#080B14"
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SHIELD uses your location to share with trusted contacts during emergencies.",
        "NSMicrophoneUsageDescription": "SHIELD records audio evidence when SOS is activated."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#080B14"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shield.safetyapp",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAQV-6Dp_L4HjUIUCsqt885V_SiEyvegUk"
        }
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "SEND_SMS",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SHIELD to use your location during emergencies."
        }
      ]
    ]
  }
}